<header>
  <h1>Hacker News</h1>
  <p>
    <a href="#posts">new</a>
    <a href="#">comments</a>
    <a href="#">popular</a>
    <a href="#">login</a>
  </p>
</header>

{{!-- {{ > post}} --}}

<div class='post-container'>
  {{#each posts}}
  <article id="{{this._id}}">
    <button data-votebtnid='{{this._id}}' class="fa fa-sort-desc vote-button upvote-button"></button>
    <h2><a href='/posts/{{this._id}}'>{{this.title}}</a></h2>
    <p>
      <span id='points' class='points'>{{this.points}}</span>
      <span class='username'>{{this.username}}</span>
      <span class='timestamp'>{{this.timeSinceCreation}}</span>
      <span class='comment-count'>{{ this.commentCount}}</span>
      <a data-delete='{{this._id}}' class="delete" href='/posts/{{this.id}}'></a>
    </p>
  </article>
  {{/each}}
</div>

<form id="posts" method="post" action="/posts">
  <input type="text" name="title" placeholder="title">
  <input type="submit" value="submit new post">
</form>
